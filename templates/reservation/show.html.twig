{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Réservation</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Date de début</th>
                            <td>{{ reservation.startDate ? reservation.startDate|date('d-m-Y H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date de fin</th>
                            <td>{{ reservation.endDate ? reservation.endDate|date('d-m-Y H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                        
                            <th scope="row">Prix total</th>
                            <td>{{ reservation.totalPrice }} €</td>
                      
                        </tr>
                        <tr>
                            <th scope="row">Statut</th>
                            <td class=>{{ reservation.status }}</td>
                        </tr>

                        <tr>
                            <th scope="row">Véhicule</th>
                            <td>{{ reservation.vehicle ? reservation.vehicle.marque ~ ' ' ~ reservation.vehicle.model : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-4 d-flex justify-content-around">
                    <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-primary">Modifier</a>
                    {% endif %}
                    {{ include('reservation/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
